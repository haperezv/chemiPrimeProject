<%= form_with(model: @job) do |form| %> 
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
        <%= render partial:'partials/aside' %>
        <div class="flex flex-col flex-1">
            <%= render partial:'partials/header' %> 
            <main class="h-full pb-16 overflow-y-auto">
                <div class="container px-6 mx-auto grid">                 
                    <h4 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"> 
                        Job
                    </h4>
                    <a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple">
                        <div class="flex items-center">
                        <span>New Job</span>
                        </div>
                    </a>

                        <% if @job.errors.any? %>
                            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                                <% @job.errors.each do |error| %>
                                    <li> <%= error.full_message %> </li>
                                <%end%>
                            </div>
                        <%end%>  
                        <div class="px-20 py-10 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800" >
                            <div class="relative">
                                <span class="text-gray-700 dark:text-gray-400">
                                        Job Name
                                </span>
                                <%= form.text_field :job_type, placeholder:"", class:"block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-black-300 dark:focus:shadow-outline-gray form-input" %>
                            </div>
                            <div class="mt-8 flex flex-col flex-wrap mb-4 space-y-4 md:flex-row md:items-end md:space-x-4">
                                <%= form.submit "Submit item", class:"px-5 py-3 font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"%>
                            </div>
                        </div>    
                </div>   
            </main>
        </div>
    </div>
<% end %>