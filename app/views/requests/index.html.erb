<div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
  <%= render partial:'partials/aside' %>
    <div class="flex flex-col flex-1">
      <%= render partial:'partials/header' %> 
        <main class="h-full pb-16 overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <h2
              class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
            >
              Dashboard
            </h2>

            <a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple">
                <div class="flex items-center">
                  <span>Test Requests</span>
                </div>
            </a>

            <div class="w-full overflow-hidden rounded-lg shadow-xs">
              <div class="w-full overflow-x-auto">
                  <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">                      
                        <th class="px-4 py-3">Request number</th>
                        <th class="px-4 py-3">Request Creating</th>
                        <th class="px-4 py-3">Job Type</th>
                        <th class="px-4 py-3">Views</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                          <%= render partial: "request", collection: @requests %>
                    </tbody>
                  </table>
              </div>
                <!-- Pagination -->
                <div class="text-center my-4">
                   <div role="navigation" aria-label="Pagination" class="px-3 py-2 mx-2 text-gray-700 no-underline bg-white rounded-lg">
                        <div class="flickr_pagination">
                          <div class="py-4">
                            <%= will_paginate(@requests) %>
                          </div>
                        </div>
                   </div>
                </div> 
            </div>
          </div>
        </main>
    </div>
</div>