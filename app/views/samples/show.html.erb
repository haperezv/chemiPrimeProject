<div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
    <%= render partial:'partials/aside' %>
    <div class="flex flex-col flex-1">
        <%= render partial:'partials/header' %> 
        <main class="h-full pb-16 overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <div class="my-6 flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple">
                <div class="flex items-center">
                    Density: <%= @sample.sample %> 
                </div>
            </div>
            <div class="max-w-2xl px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">

                    <%=@sample.sample %>
            </div>
             <div>
                <%=link_to 'Delete',  sample_path, 
                        data: {turbo_method: :delete,
                            turbo_confirm: 'Estas seguro eliminar el producto?'},
                            class:"px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-red-600 border border-transparent rounded-lg hover:bg-red-700 font-semibold rounded shadow"
                        %>

                <%= link_to "Back to samples", samples_path, class:"px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" %>
            </div>
          </div>
        </main>
    </div>
</div>