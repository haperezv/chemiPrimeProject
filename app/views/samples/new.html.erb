<%= form_with(model: @sample) do |form| %>    
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
        <%= render partial:'partials/aside' %>
        <div class="flex flex-col flex-1">
            <%= render partial:'partials/header' %> 
            <main class="h-full pb-16 overflow-y-auto">
                <div class="container px-6 mx-auto grid">                   
                    <h4 class="my-6 mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"> New Additives </h4>
                        <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800" >
                            <% if @sample.errors.any? %>
                                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                                    <% @sample.errors.each do |error| %>
                                        <li> <%= error.full_message %> </li>
                                    <%end%>
                                </div>
                            <%end%>
                            <div class="grid items-end gap-6 mb-6 md:grid-cols-3">
                                <div class="relative max-w-sm">
                                    <span class="text-gray-700 dark:text-gray-400">
                                            Additives Name
                                    </span>
                                    <%= form.text_field :sample, placeholder:"", class:"block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-black-300 dark:focus:shadow-outline-gray form-input" %>
                                </div> 
                            </div>
                            <%= form.submit "Submit item", class:"cursor-pointer my-2 px-4 py-2 text-center inline-block text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700"%>
                        </div>     
                </div>
            </main>
        </div>
    </div>

<%end%>
